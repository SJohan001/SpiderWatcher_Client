@page "/"

<PageTitle>SpiderWatcher-Home</PageTitle>

<div class="container-fluid bg-danger text-white">
    <div class="row full-height">
        <div class="col-md-6 d-flex justify-content-center align-items-center left-section">
            <div>
                <img src="https://seeklogo.com/images/S/spyder-logo-877E672513-seeklogo.com.png" alt="Your Image" class="img-fluid">
                <h1 class="text-center">SpiderWatcher</h1>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-center align-items-center right-section">
            <div class="w-75">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="form-control" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" placeholder="Password" />
                    <a href="#">Forgot Password?</a>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary btn-block">Login</button>
                </div>
                <div>
                    <label></label>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-secondary">Create Account</button>
                </div>
            </div>
        </div>
    </div>
</div>