@page "/"
@inject NavigationManager NavigationManager
@inject AuthenticationService AuthService
@using SpiderWatcher_Client.DTOs.UserDTO


<PageTitle>SpiderWatcher-Home</PageTitle>

<div class="container-fluid bg-danger text-white">
    <div class="row full-height">
        <div class="col-md-6 d-flex justify-content-center align-items-center left-section">
            <div>
                <img src="https://seeklogo.com/images/S/spyder-logo-877E672513-seeklogo.com.png" alt="Your Image" class="img-fluid">
                <h1 class="text-center">SpiderWatcher</h1>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-center align-items-center right-section">
            <div class="w-75">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="username">Username</label>
                    <InputText id="username" @bind-Value="loginUserDTO.UserName" class="form-control" placeholder="Usuario" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <InputText id="password" @bind-Value="loginUserDTO.Password" class="form-control" placeholder="Contraseña" required />
                    <a href="#" @onclick="ShowRecoverAccount">Forgot Password?</a>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary btn-block" @onclick="Login">Login</button>
                </div>
                <div>
                    <label></label>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-secondary" @onclick="ShowModal">Create Account</button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="display: block;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" @onclick="HideModal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <CrearCuenta />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showRecoverAccount)
{
    <div class="modal show d-block" tabindex="-1" style="display: block;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" @onclick="HideRecoverAccount" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <RecuperarCuenta />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideRecoverAccount">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private LoginUserDTO loginUserDTO = new LoginUserDTO();

    private bool showModal = false;
    private bool showRecoverAccount = false;

    private void ShowModal()
    {
        showModal = true;
    }

    private void HideModal()
    {
        showModal = false;
    }

    private void ShowRecoverAccount()
    {
        showRecoverAccount = true;
    }
    
    private void HideRecoverAccount()
    {
        showRecoverAccount = false;
    }

    private async Task Login()
    {
        var isAuthenticated = await AuthService.LoginAsync(loginUserDTO);
        if (isAuthenticated)
        {
            NavigationManager.NavigateTo("/visualizarContenido");
        }
        else
        {
            // Mostrar mensaje de error
            //hacer logout de mientras para probar que funcione
            await AuthService.LogoutAsync();

        }
    }   
}