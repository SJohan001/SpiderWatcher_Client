@page "/crearCuenta"

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title">Create Account</h2>
                    <form>
                        <div class="form-group">
                            <label for="email">E-mail:</label>
                            <input type="email" id="email" @bind="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" id="name" @bind="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="lastname">Last Name:</label>
                            <input type="text" id="lastname" @bind="lastName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="birthday">Birthday:</label>
                            <input type="date" id="birthday" @bind="birthday" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="username">User Name:</label>
                            <input type="text" id="username" @bind="username" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" @bind="password" class="form-control" required>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" id="terms" name="terms" class="form-check-input" @bind="termsAgreed" required>
                            <label class="form-check-label" for="terms">By creating an account you agree to our <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.</label>
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary" @onclick="CreateAccount" disabled="@(!termsAgreed)">Create Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string email;
    private string name;
    private string lastName;
    private DateTime birthday;
    private string username;
    private string password;
    private bool termsAgreed = false;

    private void CreateAccount()
    {
        // Asignar los valores de los campos de entrada a las variables
        // cuando se seleccione el botón "Create Account"
        email = email;
        name = name;
        lastName = lastName;
        birthday = birthday;
        username = username;
        password = password;

        // Lógica para crear la cuenta
        // Puedes usar las variables email, name, lastName, birthday, username y password aquí para realizar la lógica necesaria
    }
}